<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.valentinvasilescu.ceva.Screen2"
        android:layout_width="380dp"
        android:layout_height="500dp">

        <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location traker"
        android:layout_below="@+id/imageslider"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_marginTop="121dp" />

    <Button
        android:id="@+id/imageslider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slider screen"
        android:gravity="center"
        android:layout_below="@+id/camera"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/tabbed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tabbed screen"
        android:layout_below="@+id/weather"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabbed"
        android:layout_toEndOf="@+id/TextView"
        android:text="Take quiz"
        android:layout_alignParentStart="true" />


    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
        android:weightSum="30"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                android:weightSum="30"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="10"/>
                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="10"/>

                <ImageView
                    android:id="@+id/imageView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView12"
                    android:layout_alignStart="@+id/imageView12"
                    android:layout_below="@+id/mesaj"
                    android:scaleType="fitXY"
                    android:layout_weight="10"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10"
            android:weightSum="30"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView12"
                android:layout_alignStart="@+id/imageView12"
                android:layout_below="@+id/mesaj"
                android:scaleType="fitXY"
                android:layout_weight="10"/>

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView12"
                android:layout_alignStart="@+id/imageView12"
                android:layout_below="@+id/mesaj"
                android:scaleType="fitXY"
                android:layout_weight="10"/>
            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView12"
                android:layout_alignStart="@+id/imageView12"
                android:layout_below="@+id/mesaj"
                android:scaleType="fitXY"
                android:layout_weight="10"/>
        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                android:weightSum="30"
                android:visibility="invisible">
                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView12"
                    android:layout_alignStart="@+id/imageView12"
                    android:layout_below="@+id/mesaj"
                    android:scaleType="fitXY"
                    android:layout_weight="10"/>

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView12"
                    android:layout_alignStart="@+id/imageView12"
                    android:layout_below="@+id/mesaj"
                    android:scaleType="fitXY"
                    android:layout_weight="10"/>
                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView12"
                    android:layout_alignStart="@+id/imageView12"
                    android:layout_below="@+id/mesaj"
                    android:scaleType="fitXY"
                    android:layout_weight="10"/>
            </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/TextView"
        android:layout_width="104dp"
        android:layout_height="85dp"

        android:layout_weight="10"
        android:text="Bine ai venit"
        android:textColor="#c41414"
        android:textSize="30dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="Utilizator"
        android:textColor="#c41414"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/TextView"
        android:layout_toStartOf="@+id/linearLayout"
        android:layout_marginBottom="15dp" />




</RelativeLayout>


